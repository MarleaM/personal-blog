{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",
    //"rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"] //This ensures TS sees the global 'process' and Prisma types 
  },
  "include": [
      "src/**/*",
      "./prisma.config.ts", 
      "./node_modules/.prisma/client" 
    ]
}
